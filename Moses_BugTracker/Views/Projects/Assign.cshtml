
@{
    ViewBag.Title = "Assign";
}

<h2>Assign</h2>
<hr />

<style>
    .tall {
        min-height:100px;
    }
</style>

@*Now I will use a simple grid layout to place both the SelectList and Multi SelectList*@

<div class="container">
    <div class="row">
        <div class="col-md-12">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="row">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-offset-1 col-md-5">
                    <div class="form-group">
                        @Html.Label("Select user", null, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("AssignableUser", null, "--Select A User--", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessage("AssignableUser", "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-offset-1 col-md-5">
                    <div class="form-group">
                        @Html.Label("Select users", null, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.ListBox("AssignableUsers", null, htmlAttributes: new { @class = "form-control tall" })
                            @Html.ValidationMessage("AssignableUsers", "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
         
            <div class="row">
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        }
    </div>

</div>

